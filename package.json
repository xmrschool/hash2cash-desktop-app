{
  "name": "hashtocash",
  "productName": "Hash to Cash",
  "version": "1.0.3",
  "description": "Hash to cash allows you to mine cryptocurrencies and transform them directly to fiat. Future is here!",
  "main": "app/main/main.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test node --trace-warnings ./test/runTests.js",
    "test-all": "npm run test && npm run build && npm run test-e2e",
    "test-watch": "npm test -- --watch",
    "test-e2e": "cross-env NODE_ENV=test node --trace-warnings ./test/runTests.js e2e",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 server.js",
    "build-main": "cross-env node ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env node ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build-server": "cross-env node ./node_modules/webpack/bin/webpack --config webpack.config.server.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer && npm run build-server",
    "start": "cross-env NODE_ENV=production electron ./app/main/main.js",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron ./app/main/main.js",
    "dev": "npm run build-main && npm run hot-server -- --start-hot",
    "package": "npm run build && which build && build --publish always",
    "package-win": "cross-env NODE_ENV=production npm run build && build --win --x64 --publish always",
    "package-mac": "NODE_ENV=production npm run build && build --mac --publish always",
    "package-linux": "npm run build && build --linux",
    "package-all": "NODE_ENV=production npm run build && build -mwl --publish always",
    "cleanup": "mop -v",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Hash to Cash",
    "appId": "cash.hashto",
    "npmRebuild": false,
    "publish": {
      "provider": "spaces",
      "name": "hash2cash",
      "region": "ams3",
      "path": "app",
      "channel": "latest"
    },
    "files": [
      "app/main/dist/",
      "app/renderer/app.html",
      "app/main/trayIcon.png",
      "app/miner/app/index.html",
      "app/main/main.js",
      "node_modules/",
      "!node_modules/uws",
      "!node_modules/*-detector/{build,extra,src,json,extra,libcpuid,binding.gyp,.git}",
      "!node_modules/native-utils/{build,extra,src,json,extra,libcpuid,binding.gyp,.git}",
      "!node_modules/raven-js/dist",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "extraFiles": [
        "windows-utils/"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internals/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "app/node_modules"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "author": {
    "name": "Hash to Cash",
    "email": "we@hashto.cash"
  },
  "private": true,
  "homepage": "https://hashto.cash/?utm_source=extension&utm_medium=pkg",
  "dependencies": {
