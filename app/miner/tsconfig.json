{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "baseUrl": "./app/",
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "outDir": "./out",
    "types": ["node"],
    "rootDirs": ["app/", "test/"],
    "experimentalDecorators": true
  },
  "files": ["app/index.ts"],
  "include": ["app/**/*.ts", "app/**/*.tsx", "app/**/*.d.tsx"],
  "exclude": [
    "node_modules",
    "app/renderer/node_modules",
    "app/node_modules",
    "dist",
    "out"
  ],
  "compileOnSave": false
}